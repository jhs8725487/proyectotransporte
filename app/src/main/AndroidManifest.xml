<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joel.proyectogrado">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoGrado"
        android:usesCleartextTraffic="true">
        <activity android:name=".MapDriverActivity"></activity>
        <activity android:name=".UpdateinfoActivity" />
        <activity android:name=".client.MapClientActivity" />
        <activity
            android:name=".drive.ConfirmPassActivity2"
            android:parentActivityName=".drive.Register2" />
        <activity
            android:name=".drive.Register2"
            android:parentActivityName=".SelectOptionAuthActivity" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".SelectOptionAuthActivity" />
        <activity
            android:name=".client.RegisterActivity"
            android:parentActivityName=".SelectOptionAuthActivity" />
        <activity
            android:name=".SelectOptionAuthActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>