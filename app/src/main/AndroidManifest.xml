<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joel.proyectogrado">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoGrado"
        android:usesCleartextTraffic="true">
        <activity android:name=".UpdateinfoActivity"></activity>
        <activity android:name="Activity.client.MapClientActivity" />
        <activity
            android:name="Activity.drive.ConfirmPassActivity2"
            android:parentActivityName="Activity.drive.Register2" />
        <activity
            android:name="Activity.drive.Register2"
            android:parentActivityName="Activity.SelectOptionAuthActivity" />
        <activity
            android:name="Activity.LoginActivity"
            android:parentActivityName="Activity.SelectOptionAuthActivity" />
        <activity
            android:name="Activity.client.RegisterActivity"
            android:parentActivityName="Activity.SelectOptionAuthActivity" />
        <activity
            android:name="Activity.SelectOptionAuthActivity"
            android:parentActivityName="Activity.MainActivity" />
        <activity android:name="Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data android:name="com.google.android.geo.API_KEY" android:value="@string/google_maps_key"/>
    </application>

</manifest>